{
  "name": "@everynote/plugin-mention",
  "version": "1.0.2",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./*": {
      "import": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.mjs"
      },
      "require": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.js"
      }
    },
    "./serializer/*": {
      "import": {
        "types": "./dist/serializer/*.d.ts",
        "default": "./dist/serializer/*.mjs"
      },
      "require": {
        "types": "./dist/serializer/*.d.ts",
        "default": "./dist/serializer/*.js"
      }
    },
    "./deserializer/*": {
      "import": {
        "types": "./dist/deserializer/*.d.ts",
        "default": "./dist/deserializer/*.mjs"
      },
      "require": {
        "types": "./dist/deserializer/*.d.ts",
        "default": "./dist/deserializer/*.js"
      }
    }
  },
  "typesVersions": {
    "*": {
      "serializer/html": [
        "dist/serializer/html.d.ts"
      ],
      "serializer/text": [
        "dist/serializer/text.d.ts"
      ],
      "deserializer/html": [
        "dist/deserializer/html.d.ts"
      ]
    }
  },
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "test": "jest",
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{json,ts,tsx,js,jsx}\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@everynote/models": "workspace:*",
    "@everynote/editor": "workspace:*",
    "@types/lodash.debounce": "4.0.7",
    "@types/react": "^18.x",
    "@types/react-dom": "^18.x",
    "eslint-config-editable": "workspace:*",
    "jest": "^27.5.1",
    "jest-presets": "workspace:*",
    "prettier-config": "workspace:*",
    "react": "^18.x",
    "react-dom": "^18.x",
    "tailwind-config": "workspace:*",
    "tailwindcss": "^3.2.4",
    "tsconfig": "workspace:*",
    "tsup": "^6.5.0",
    "tsup-config": "workspace:*",
    "twin.macro": "3.1.0",
    "typescript": "^4.x"
  },
  "peerDependencies": {
    "@everynote/models": "workspace:*",
    "@everynote/editor": "workspace:*"
  },
  "dependencies": {
    "@everynote/deserializer": "workspace:*",
    "@everynote/serializer": "workspace:*",
    "@everynote/ui": "workspace:*",
    "lodash.debounce": "^4.0.8",
    "styled-components": "5.3.6",
    "zustand": "4.1.4"
  },
  "lint-staged": {
    "src/**/*.{json,ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "jest-presets/jest/node"
  }
}
